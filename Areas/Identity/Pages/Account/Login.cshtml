@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login-reg.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href='https://fonts.googleapis.com/css?family=Saira Semi Condensed' rel='stylesheet'>
    <style>
        body {
            font-family: 'Saira Semi Condensed';
            font-size: 22px;
        }
    </style>
</head>
<body>
    <form id="account" method="post">
        <div class="reg-form">
            <div class="title">
                Login
                <hr>
            </div>
            <div class="input_field">
                <label asp-for="Input.UserName">Username</label><br>
                <input asp-for="Input.UserName" type="text" placeholder="Username"><br>
            </div>
            <div class="input_field">
                <label asp-for="Input.Password">Password</label><br>
                <input asp-for="Input.Password" type="password" placeholder="Password"><br>
            </div>
            <button type="submit" class="btn-log">Login</button>
    </form>
    <div class="title">
        or<br>
    </div>
    <button type="submit" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-reg">Register</button>
    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
    </div>
</body>
