@model Kuwadro.Models.ApplicationUser

@{
    ViewData["Title"] = "UploadProfile";
}

<body>
    <div class="container-zzz">
        <div class="upload-container">
            <div class="upload-form">
                <form asp-action="UploadProfile" enctype="multipart/form-data">
                    <div class="input-container">
                        <label asp-for="ProfilePicture">Change Profile Pic</label><br>
                        <input asp-for="ProfilePicture" type="file" accept="image/*" />
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div><br>
                    <div class="input-container">
                        <label asp-for="Background">Change Cover Pic</label><br>
                        <input asp-for="Background" type="file" accept="image/*" />
                        <span asp-validation-for="Background" class="text-danger"></span>
                    </div><br>
                    <div class="input-container">
                        <label asp-for="Bio">Change Bio/Status</label><br>
                        <textarea asp-for="Bio" class="form-control" rows="4" cols="50"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div><br>
                    <div class="input-container">
                        <label asp-for="About">Change About</label><br>
                        <textarea asp-for="About" class="form-control" rows="4" cols="50"></textarea>
                        <span asp-validation-for="About" class="text-danger"></span>
                    </div><br>
                    <button type="submit" value="Save" class="save">Save</button>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
